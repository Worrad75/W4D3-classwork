<form action="<%=users_url%>" method="POST">

  <label for="user_name">Username</label>
  <input
    type="text"
    name="user[user_name]"
    id="user_name"
    value="<%= @user.user_name %>">


  <label for="password">Password</label>
  <input
    type="password"
    name="user[password]"
    id="password"
    value="<%= @user.password %>">


  <input type="submit" value="Login">

</form>